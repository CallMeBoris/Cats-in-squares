<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="boris.narodov.catsinsquares.FullscreenActivityBotHard">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <ImageView
        android:id="@+id/backgroundGameHard"
        tools:ignore="MissingConstraints"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"

        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TableLayout
            android:layout_width="match_parent"
            android:id="@+id/tableHard"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            >

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView3BotHard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/dalmata_dream_normal_109866"
                    android:textColor="#FFFF"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <ImageButton
                    android:id="@+id/imageButton29BotHard"
                    style="@style/mainButtonsIn"
                    />
            </TableRow>
            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/firstFirstBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot" />

                <ImageButton
                    android:id="@+id/firstSecondBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/firstThirdBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/firstFourthBotHard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:onClick="talkBot"/>
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/secondFirstBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/secondSecondBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/secondThirdBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot" />

                <ImageButton
                    android:id="@+id/secondFourthBotHard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:onClick="talkBot"/>
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/thirdFirstBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/thirdSecondBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/thirdThirdBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/thirdFourthBotHard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:onClick="talkBot"/>
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/fourthFirstBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/fourthSecondBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/fourthThirdBotHard"
                    style="@style/mainButtonsIn"
                    android:onClick="talkBot"/>

                <ImageButton
                    android:id="@+id/fourthFourthBotHard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:onClick="talkBot"/>
            </TableRow>

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adViewActivityBotHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-5586713183085646/6221739985">
            </com.google.android.gms.ads.AdView>

        </TableLayout>
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>