<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutTheAuthors">

    <ImageView
        android:id="@+id/backgroundAuthors"
        tools:ignore="MissingConstraints"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp">

            <TextView
                android:shadowDy="0"
                android:shadowDx="0"
                android:shadowRadius="5"
                android:shadowColor="@android:color/white"
                android:id="@+id/aboutFirst"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dalmata_dream_normal_109866"
                android:textColor="#000080"
                android:textStyle="italic|bold"
                android:textSize="18sp"
                tools:ignore="MissingConstraints"/>

            <TextView
                android:id="@+id/aboutThird"
                android:shadowDy="0"
                android:shadowDx="0"
                android:shadowRadius="5"
                android:shadowColor="@android:color/white"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dalmata_dream_normal_109866"
                android:textColor="#000080"
                android:textStyle="italic|bold"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/aboutFourth"
                android:shadowDy="0"
                android:shadowDx="0"
                android:shadowRadius="5"
                android:shadowColor="@android:color/white"
                android:lineSpacingExtra="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/dalmata_dream_normal_109866"
                android:textColor="#000080"
                android:textStyle="italic|bold"
                android:textSize="18sp"
                tools:ignore="MissingConstraints" />


            <Button
                android:id="@+id/buttonExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="exitMenu"
                style="@style/buttonsMenuExit"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>