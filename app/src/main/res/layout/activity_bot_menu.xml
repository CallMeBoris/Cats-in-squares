<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boris.narodov.catsinsquares.BotMenu">

    <ImageView
        android:id="@+id/backgroundBotMenu"

        tools:ignore="MissingConstraints"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:scaleType="centerCrop"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/easy"
                style="@style/buttonsMenu"
                android:layout_marginTop="70dp"

                android:onClick="easy"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/medium"
                style="@style/buttonsMenu"

                android:onClick="medium"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/hard"
                style="@style/buttonsMenu"

                android:onClick="hard"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonBackBotMenu"
                style="@style/buttonsMenuExit"
                android:onClick="backbot"

                android:minWidth="200dp"
                android:minHeight="50dp"
                tools:ignore="OnClick" />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <boris.narodov.catsinsquares.OutlineTextView
                android:theme="@style/MyCheckBox"
                android:gravity="center"
                app:textStrokeWidth="5sp"
                app:textStrokeColor="#FFFFFF"
                android:id="@+id/botMenuBox"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="3"
                android:textColor="#000080"
                android:textSize="28sp"
                android:fontFamily="@font/dalmata_dream_normal_109866"
                android:textStyle="italic" />

                        </TableRow>

                    </TableLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>