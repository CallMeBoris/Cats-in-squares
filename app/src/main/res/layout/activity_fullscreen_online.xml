<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="boris.narodov.catsinsquares.FullscreenActivityOnline"
    android:id="@+id/scene_rootOnline">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <ImageView
        android:id="@+id/backgroundGameOnline"
        app:srcCompat="@drawable/backgr1"
        tools:ignore="MissingConstraints"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/wooden2">

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textOnline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:fontFamily="@font/dalmata_dream_normal_109866"
                    android:textColor="#FFFF"
                    android:textSize="25sp"
                    android:textStyle="italic" />

                <ImageButton
                    android:id="@+id/imageButton29Online"
                    style="@style/mainButtonsIn"
                    android:onClick="startGame"/>
            </TableRow>

            <TableRow

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/firstFirstOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk" />

                <ImageButton
                    android:id="@+id/firstSecondOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk" />

                <ImageButton
                    android:id="@+id/firstThirdOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk" />

                <ImageButton
                    android:id="@+id/firstFourthOnline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:onClick="talk"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/nothing" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                >

                <ImageButton
                    android:id="@+id/secondFirstOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/secondSecondOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/secondThirdOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/secondFourthOnline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/nothing"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:onClick="talk"/>
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/thirdFirstOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/thirdSecondOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/thirdThirdOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/thirdFourthOnline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/nothing"
                    android:background="@android:color/transparent"
                    android:onClick="talk"/>
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp">

                <ImageButton
                    android:id="@+id/fourthFirstOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/fourthSecondOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/fourthThirdOnline"
                    style="@style/mainButtonsIn"
                    android:onClick="talk"/>

                <ImageButton
                    android:id="@+id/fourthFourthOnline"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/nothing"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:onClick="talk"/>
            </TableRow>



        </TableLayout>
        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>
    </FrameLayout>
</FrameLayout>